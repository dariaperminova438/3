public class SelectionSort {
    
    // Метод для реализации сортировки выбором
    public static void selectionSort(int[] arr) {
        // Проходим по всем элементам массива
        // Внешний цикл отвечает за границу между отсортированной и неотсортированной частью
        for (int i = 0; i < arr.length - 1; i++) {
            // Предполагаем, что текущий элемент (i-й) является минимальным
            int minIndex = i;
            
            // Внутренний цикл - ищем минимальный элемент в неотсортированной части
            // Начинаем поиск со следующего элемента после i
            for (int j = i + 1; j < arr.length; j++) {
                // Если находим элемент меньше текущего минимального
                if (arr[j] < arr[minIndex]) {
                    // Обновляем индекс минимального элемента
                    minIndex = j;
                }
            }
            
            // После нахождения минимального элемента в неотсортированной части
            // Меняем местами найденный минимальный элемент с первым элементом неотсортированной части
            int temp = arr[minIndex];    // Сохраняем значение минимального элемента во временную переменную
            arr[minIndex] = arr[i];      // На место минимального элемента ставим первый элемент неотсортированной части
            arr[i] = temp;               // На место первого элемента ставим минимальный элемент
        }
    }
    
    // Вспомогательный метод для вывода массива на экран
    public static void printArray(int[] arr) {
        // Проходим по всем элементам массива
        for (int i = 0; i < arr.length; i++) {
            // Выводим текущий элемент
            System.out.print(arr[i] + " ");
        }
        // Переходим на новую строку после вывода всего массива
        System.out.println();
    }
    
    // Главный метод - точка входа в программу
    public static void main(String[] args) {
        // Создаем тестовый массив для сортировки
        int[] array = {64, 25, 12, 22, 11};
        
        // Выводим исходный массив
        System.out.print("Исходный массив: ");
        printArray(array);
        
        // Вызываем метод сортировки выбором
        selectionSort(array);
        
        // Выводим отсортированный массив
        System.out.print("Отсортированный массив: ");
        printArray(array);
    }
}
