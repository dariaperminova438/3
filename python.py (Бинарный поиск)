def binary_search(arr, target):
    """
    Выполняет бинарный поиск в отсортированном массиве.
    
    Args:
        arr: отсортированный список элементов
        target: элемент для поиска
    
    Returns:
        int: индекс элемента или -1 если не найден
    """
    left = 0                    # Левая граница поиска (начало массива)
    right = len(arr) - 1        # Правая граница поиска (конец массива)
    
    while left <= right:        # Пока есть область для поиска
        mid = (left + right) // 2  # Находим средний индекс
        
        if arr[mid] == target:  # Если элемент найден
            return mid
        elif arr[mid] < target: # Если искомый элемент больше среднего
            left = mid + 1      # Ищем в правой половине
        else:                   # Если искомый элемент меньше среднего
            right = mid - 1     # Ищем в левой половине
    
    return -1                   # Элемент не найден
